<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">

        <h3>Home</h3>
        <a class="btn btn-success mb-3" href="/profile/<%= username %>">Profile</a>
        <a class="btn btn-primary mb-3" href="/<%= id %>/post">Post</a>

      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% data.forEach(element=> { %>
           
                <div class="col">
                  <div class="card h-100">
                    <img class="card-img-top" src="<%= element.imgUrl %>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= element.title %>
                        </h5>
                        <p class="card-text">
                            <%= element.description %>
                        </p>
                        <p class="card-text">
                            <%= element.Tags.name %>
                        </p>
                        <a href="/post/<%= element.id %>/like" class="btn btn-primary">Like</a>
                        <span>
                            <%= element.like %>
                        </span>
                         <% if (role === 'admin'){ %>
                        <a href="">Delete Post</a>
                    <% } %>
                    </div>

                  </div>

                </div>

            <% }); %>
            </div>
    </div>
</body>
</html>