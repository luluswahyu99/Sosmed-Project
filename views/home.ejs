<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <div class="container">
      <%- include('./partials/navbar.ejs') %>
    <div class="container">

        <h3>Home</h3>
        <form class="form-inline" action="" method="get">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="tag" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
                <input type="submit" class="btn btn-primary" value="Search">
            </div>
        </form>
        
        <% data.forEach(element=> { %>
          <div class="card mb-3">
                <div class="col">
                  <div class="card h-100">
                    <img class="card-img-top" src="<%= element.imgUrl %>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= element.title %>
                        </h5>
                        <p class="card-text">
                            <%= element.description %>
                        </p>
                        <p class="card-text">
                            <%= element.Tags.name %>
                        </p>
                        <a href="/post/<%= element.id %>/like" class="btn btn-primary">Like</a>
                        <span>
                            <%= element.like %>
                        </span>
                        <% if (role === 'admin'){ %>
                          <a href="/post/<%= element.id %>/delete" class="btn btn-danger">Delete Post</a>
                      <% } %>
                    </div>   
                  </div>
                </div>
            </div>
            <% }); %>
            
    </div>
</body>
</html>