<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <%- include('./partials/navbar.ejs') %>

          <div class="d-flex justify-content-center">

            <div>
              <img src="<%= data.Profile.imgProfile %>" class="rounded-circle" style="width: 150px;" alt="Avatar" />
            <h5>Name: <%= fullName %></h5>
            <p>Address: <%= data.Profile.address %></p>
            <p>Day Birth: <%= data.Profile.formateDate %></p>

            <a href="/profile/<%= data.username %>/edit/<%= data.Profile.id %>">Edit</a>
            </div>
            

          </div>
        <div class="row row-cols-1 row-cols-md-3 g-4">
        <% posts.forEach(element=> { %>
          <div class="col">
            <div class="card">
                <img class="card-img-top" src="<%= element.imgUrl %>" alt="Card image cap">
                <div class="card-body">
                    <!-- <h6>username</h6> -->
                    <h5 class="card-title">
                        <%= element.title %>
                    </h5>
                    <p class="card-text">
                        <%= element.description %>
                    </p>
                    <p class="card-text">
                        <%= element.Tags.forEach(el => {el.name}) %>
                    </p>
                    <div>
                        <a href="/post/<%= element.id %>/like" class="btn btn-primary">Like</a>
                        <span>
                            <%= element.like %>
                        </span>
                    </div>
                    <a href="/post/<%= element.id %>/delete" class="btn btn-danger">Delete Post</a>
                    </div>
                </div>
            </div>
            <% }); %>
          </div>
    </div>
</body>
</html>